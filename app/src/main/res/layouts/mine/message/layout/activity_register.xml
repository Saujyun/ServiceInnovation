<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.skyworthclub.serviceinnovation.Mine.activity.MessageDialogActivity">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mine_add_sub_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#F7F7F7">
        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textSize="20dp"
            android:fontFamily="@font/noto_sans"/>

        <TextView
            android:id="@+id/register_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:clickable="true"
            android:textColor="#007AFF"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:fontFamily="@font/noto_sans"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="46dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_gravity="center_horizontal">
        <EditText
            android:id="@+id/register_account_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入用户名（不超过10个字符）"
            android:theme="@style/MyEditText"/>
        <ImageView
            android:id="@+id/delete_register_account_img"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/delete"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_gravity="center_horizontal">
        <EditText
            android:id="@+id/register_phone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入手机号（仅支持11位手机号）"
            android:theme="@style/MyEditText"/>
        <ImageView
            android:id="@+id/delete_register_phone_img"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/delete"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_gravity="center_horizontal">
        <EditText
            android:id="@+id/register_enter_confirm_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入手机验证码"
            android:theme="@style/MyEditText"/>
        <TextView
            android:id="@+id/register_get_confirm_tv"
            android:layout_width="59dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="获取验证码"
            android:textSize="10sp"
            android:textColor="#EEEEEE"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_gravity="center_horizontal">
        <EditText
            android:id="@+id/register_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入新密码"
            android:inputType="textPassword"
            android:theme="@style/MyEditText"/>
        <ImageView
            android:id="@+id/delete_register_password_img"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/see_disabled"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="32dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/notice_img"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/notice"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/notice_img"
            android:text="密码不超过8位字符,请使用英文字母和阿拉伯数字混合"
            android:textColor="#9E9E9E"
            android:textSize="10sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_gravity="center_horizontal">
        <EditText
            android:id="@+id/register_confirm_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="再次填写确认"
            android:inputType="textPassword"
            android:theme="@style/MyEditText"/>
        <ImageView
            android:id="@+id/delete_register_confirm_password_img"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/see_disabled"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_gravity="center_horizontal"
        android:text="注册"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:background="@drawable/btn_bg"/>

</LinearLayout>
