<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context="com.example.skyworthclub.serviceinnovation.Mine.activity.MessageDialogActivity">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mine_add_sub_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#F7F7F7">
        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"/>
        <TextView
            android:id="@+id/my_subscribe_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订阅"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textSize="20dp"
            android:fontFamily="@font/noto_sans"/>

        <TextView
            android:id="@+id/add_subscribe_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:clickable="true"
            android:textColor="#007AFF"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:fontFamily="@font/noto_sans"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/subscribe_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
