<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/my_message_layout"
              android:layout_width="match_parent"
              android:layout_height="70dp"
                android:background="#FFFFFF">
    
    <ImageView
        android:id="@+id/portrait_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:src="@mipmap/ic_launcher"/>
    
    <TextView
        android:id="@+id/message_sender_tv"
        android:layout_width="219dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/portrait_img"
        android:layout_marginTop="16dp"
        android:text="消息发送人"
        android:textColor="#121212"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/message_info_tv"
        android:layout_width="219dp"
        android:layout_height="19dp"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@id/portrait_img"
        android:layout_below="@id/message_sender_tv"
        android:text="消息内容"
        android:textColor="#9E9E9E"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/message_receive_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="19:30"
        android:textColor="#9E9E9E"
        android:textSize="10sp"/>

</RelativeLayout>
