<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:layout_margin="18dp"
       >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/stage"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="#FFFEFE"
                    android:textSize="20dp"
                    android:text="阶段1"
                    android:background="#3F88FC"
                    android:layout_marginLeft="20dp"
                    android:layout_width="85dp"
                    android:layout_height="35dp" />
                <TextView
                    android:layout_marginStart="85dp"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/pg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="百分比"
                    android:textColor="#3F88FC"
                    android:textSize="16sp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="185dp" />
                <TextView
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="已完成"
                    android:textColor="#3F88FC"/>
            </LinearLayout>
            <ProgressBar
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:indeterminateDrawable="@color/colorBlue"
                android:minHeight="8dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="34dp"
                    android:background="#00D5DD" />

                <TextView
                    android:id="@+id/index"
                    android:text="指标概述 (XXX指标)"
                    android:textSize="15dp"
                    android:textColor="#121212"
                    android:layout_marginLeft="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="43dp"
                    android:background="@color/colorGray"
                    android:layout_width="3dp"
                    android:layout_height="40dp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="34dp"
                    android:background="#FFEE58" />

                <TextView
                    android:id="@+id/index2"
                    android:text="指标概述 (XXX指标)"
                    android:textSize="15dp"
                    android:textColor="#121212"
                    android:layout_marginLeft="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="43dp"
                    android:background="@color/colorGray"
                    android:layout_width="3dp"
                    android:layout_height="40dp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="34dp"
                    android:background="#4FC3F7" />

                <TextView
                    android:id="@+id/index3"
                    android:text="指标概述 (XXX指标)"
                    android:textSize="15dp"
                    android:textColor="#121212"
                    android:layout_marginLeft="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:height="18dp"
                        android:textColor="#9E9E9E"
                        android:text="任务时间："
                        android:layout_marginLeft="33dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView

                        android:id="@+id/finishTime"
                        android:textColor="#9E9E9E"
                        android:text="2018-04-15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:layout_marginTop="4dp"
                    android:textColor="#9E9E9E"
                    android:layout_marginLeft="33dp"
                    android:text="任务阶段结算:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fileStatus"
                        android:layout_marginLeft="150dp"
                        android:textColor="#3F88FC"
                        android:fontFamily="@font/noto_sans"
                        android:text="文件已提交，待结算"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:scaleType="center"
                        android:src="@mipmap/file_icon"
                        android:layout_marginLeft="18dp"
                        android:layout_width="23dp"
                        android:layout_height="18dp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
