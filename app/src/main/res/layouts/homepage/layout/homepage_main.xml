<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="144dp">

        <com.youth.banner.Banner
            android:id="@+id/xyj_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:indicator_margin="10dp">

        </com.youth.banner.Banner>

        <ImageView
            android:id="@+id/homepage_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="17dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/homepage_search_white2"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/xyj_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@color/colorWhite">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorFFEEEEEE"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/xyj_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>