<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/detail_project_name"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="17dp"
        android:gravity="center_vertical"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:text="@string/detail_project_name"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/detail_company_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="top"
            android:textColor="@color/colorBlack2"
            android:textSize="14sp"
            android:text="@string/detail_company_name"/>

        <TextView
            android:id="@+id/detail_project_cycle"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:layout_below="@id/detail_company_name"
            android:textColor="@color/colorBlack2"
            android:textSize="14sp"
            android:text="@string/detail_project_cycle"/>

        <TextView
            android:id="@+id/detail_project_release"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/detail_project_cycle"
            android:textColor="@color/colorBlack2"
            android:textSize="14sp"
            android:text="三小时前发布"/>

        <TextView
            android:id="@+id/detail_project_money"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/detail_project_cycle"
            android:layout_toRightOf="@id/detail_project_release"
            android:textColor="@color/colorBlack2"
            android:textSize="14sp"
            android:text="¥1500"/>
    </RelativeLayout>

</LinearLayout>