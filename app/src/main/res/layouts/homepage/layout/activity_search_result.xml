<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homepage_search_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/colorF7F7F7">

        <ImageView
            android:id="@+id/homepage_search_result_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:src="@drawable/homepage_search_back"/>

        <EditText
            android:id="@+id/homepage_editText_search_result"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:drawablePadding="14dp"
            android:layout_weight="16"
            android:layout_gravity="center_vertical"
            android:hint="@string/editText_hint"
            android:drawableLeft="@drawable/homepage_edittext_search"
            android:background="@drawable/homepage_search_background"/>

        <TextView
            android:id="@+id/homepage_result_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="17dp"
            android:layout_weight="4"
            android:fontFamily="@font/noto_sans"
            android:textSize="14sp"
            android:text="@string/homepage_back"
            android:textColor="@color/homepage_back"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray2"/>

</LinearLayout>
